# 데이터베이스 설정
DATABASE_URL=postgresql://myzone_user:myzone_password@localhost:5432/myzone_db

# Redis 설정
REDIS_URL=redis://localhost:6379/0

# JWT 설정
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# 외부 API 키
SMS_API_KEY=your-sms-api-key
SMS_API_URL=https://api.coolsms.co.kr/sms/4/send
SMS_SENDER=1588-0000
PAYMENT_API_KEY=your-payment-api-key
ADDRESS_API_KEY=your-address-api-key
KAKAO_API_KEY=your-kakao-api-key

# 이메일 설정
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@myzone.co.kr

# 암호화 설정
ENCRYPTION_PASSWORD=your-encryption-password-change-in-production
ENCRYPTION_SALT=your-encryption-salt-change-in-production

# 서버 설정
DEBUG=True
ALLOWED_HOSTS=["http://localhost:3000", "http://127.0.0.1:3000"]

# 파일 업로드 설정
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
MAX_STORAGE_SIZE=10737418240

# AWS S3 설정 (선택사항)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=ap-northeast-2
S3_BUCKET_NAME=your-s3-bucket-name
CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net