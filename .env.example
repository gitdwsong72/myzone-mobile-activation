# 프로덕션 환경 변수 예시

# 데이터베이스 설정
POSTGRES_DB=myzone_db
POSTGRES_USER=myzone_user
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://myzone_user:your_secure_password_here@db:5432/myzone_db

# Redis 설정
REDIS_URL=redis://redis:6379/0

# JWT 보안 키
SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-characters

# API 키들
SMS_API_KEY=your-sms-api-key
PAYMENT_API_KEY=your-payment-api-key
ADDRESS_API_KEY=your-address-api-key

# 서버 설정
DEBUG=False
ALLOWED_HOSTS=["https://yourdomain.com", "https://www.yourdomain.com"]