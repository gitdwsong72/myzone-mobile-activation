{
  "name": "myzone-frontend",
  "version": "1.0.0",
  "description": "MyZone 핸드폰 개통 서비스 프론트엔드",
  "homepage": "/myzone-mobile-activation/app",
  "private": true,
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.7",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.0",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.17",
    "axios": "^1.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.3",
    "react-router-dom": "^6.19.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@craco/craco": "^7.1.0",
    "cross-env": "^10.0.0",
    "jest-junit": "^16.0.0",
    "webpack-bundle-analyzer": "^4.10.1",
    "source-map-explorer": "^2.5.3"
  },
  "scripts": {
    "start": "craco start",
    "build": "GENERATE_SOURCEMAP=false craco build",
    "build:simple": "cross-env GENERATE_SOURCEMAP=false INLINE_RUNTIME_CHUNK=false craco build",
    "build:minimal": "cross-env CI=false GENERATE_SOURCEMAP=false DISABLE_ESLINT_PLUGIN=true TSC_COMPILE_ON_ERROR=true craco build",
    "build:analyze": "cross-env GENERATE_SOURCEMAP=true craco build && npm run analyze",
    "analyze": "npx webpack-bundle-analyzer build/static/js/*.js",
    "analyze:source-map": "npx source-map-explorer 'build/static/js/*.js'",
    "analyze:performance": "node scripts/analyze-performance.js",
    "build:performance": "npm run build:minimal && npm run analyze:performance",
    "test": "craco test",
    "test:ci": "craco test --coverage --watchAll=false --testResultsProcessor=jest-junit",
    "test:coverage": "craco test --coverage --watchAll=false",
    "eject": "react-scripts eject"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/index.tsx",
      "!src/reportWebVitals.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}
